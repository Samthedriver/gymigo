<div class ="container">
  <h1>Edit Profile</h1>
  <% if @user.errors.any? %>
  There were some errors:<br>
  <% @user.errors.full_messages.each do |message| %>
  <%= message %><br>
  <% end %>
  <% end %>
  <br>
  <%= form_for @user do |f| %>
  <div class = "form-group">
    <%= f.label :username, class: "form-text" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :city, class: "form-text" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :experience, class: "form-text" %>
    <%= f.text_field :experience, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :goals, class: "form-text" %>
    <%= f.text_area :goals, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.submit :'Update Profile', class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
